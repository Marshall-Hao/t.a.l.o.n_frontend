.pop-up-container {
  position: fixed; 
  bottom: 0;
  width: 100%;
  /* height: 1000rpx; */
  left: 0;
  right: 0;
  overflow: hidden;
  border-top-left-radius: 40rpx;
  box-shadow: darkgrey 0rpx 5rpx 15rpx 8rpx;
  z-index: 1003;
  background: #f8f8f8; 
  margin: 0 auto;
  transform: translateY(300%);
  transition: all 0.8s ease;
  border-top-right-radius: 30rpx;
}

.info-card {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
} 

.pop-up-img {
  height: 80%;
  width: 120px;
  padding: 10rpx 10rpx 0 10rpx;
  object-fit: cover;
}

.route {
  position: absolute;
  right: 20rpx;
  height: 70rpx;
  width: 75rpx;
  padding: 10rpx 10rpx 0 10rpx;
  /* object-fit: cover; */
}

.route:hover {
  opacity: 0.4;
}

.info {
  padding: 16rpx;
}

.h2 {
  font-size: 22rpx;
  font-weight: bold;
  margin: 0;
}

.p {
  font-size: 18rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8rpx;
}

.status-card {
  overflow: hidden;
  margin-top: 10rpx;
  display: flex;
  /* height: 120rpx; */
  align-items: center;
  margin-bottom: 8rpx;
  background: white;
  padding: 8rpx 16rpx;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.status-card .status-detail {
  flex-grow: 1; 
  padding-left: 10rpx; 
}

.status-card .p {
  margin: 0;
  font-size: 22rpx;
  line-height: 1.8;
  flex-grow: 0;
  word-break: break-all
}

.status-card small {
  font-size: 28rpx;
  color: red;
  font-weight: bold;
}

.pic-card {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}

.pic {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 12rpx;
}

.pic-des {
  font-size: 28rpx;
  padding-left: 20rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.pic image {
  height: 200rpx;
  width: 185rpx;
  /* padding: 10rpx 10rpx 0 10rpx; */
  object-position: center;
}

.help {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}


.pop-up--show .pop-up-container {
  transform: translateY(0);
}

.pop-up--show {
  display: block;
}

