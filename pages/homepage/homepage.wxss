.cover-view {
  position: absolute;
  top: 25%;
  left: 20.5%;
  background:linear-gradient(rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05)),rgba(242, 242, 242, 0.8);
  width: 450rpx;
  height: 600rpx;
  border-radius: 22rpx;
  text-align: center;
}

.cover-view-2 {
  position: absolute;
  top: 20%;
  left: 20.5%;
  background:linear-gradient(rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.05)),rgba(242, 242, 242, 0.8);
  width: 450rpx;
  height: 600rpx;
  border-radius: 22rpx;
  text-align: center;
  flex-direction: row;
  align-items: center;
