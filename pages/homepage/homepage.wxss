.choice {
  margin-top: 200rpx;
  position: absolute;
  bottom: 20%;
  width: 450rpx;
} 
.status:not([size='mini'])
{
  height: 120rpx;
  line-height: 92rpx;
  width: 58%;
  border-radius: 22rpx;
