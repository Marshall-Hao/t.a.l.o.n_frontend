.content-inner {
  width: 62%; 
  background: rgb(248, 248, 248); 
  padding: 15rpx; 
  border-radius: 10rpx; 
  margin-left: 10rpx;
}

textarea {
  height: 175rpx;
  width: 100%;
}

.btn-send {
  margin-right: 50rpx!important; 
  padding: 10rpx 20rpx 10rpx 20rpx;
  display: inline-block; 
  width: 170rpx!important; 
  height: 72rpx;
  background: #17B824; 
  color: #212121;
  font-weight: 420;
}

.switch-status {
  position: absolute;
  right: 15rpx;
}

switch .wx-switch-input {
  color: #17B824;
}
switch .wx-switch-input::before {
  background: #E67E22;
}

