page {
  height: 100%;
  margin: 0;
  padding: 0;
  background-color:rgb(248, 248, 248);
  color: black;
  opacity: 0.88;
  letter-spacing: 3rpx;
}

.profile-card {
  overflow: hidden;
  height: 200rpx;
  background:rgb(254, 255, 255);
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}

.profile-pic {
  height: 130rpx;
  width: 134rpx;
  padding: 10rpx 10rpx 0 10rpx;
  margin-left: 10rpx;
  object-position: center;
  border-top-left-radius: 43rpx;
  border-top-right-radius: 43rpx;
  border-bottom-right-radius: 26rpx;
  border-bottom-left-radius: 26rpx;
  object-fit: cover;
}

.login {
  overflow: hidden;
  height: 200rpx;
  background:rgb(254, 255, 255);
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-info {
  font-size: 45rpx;
  font-weight: medium;
  opacity: 0.8;
  margin: 0;
} 

.info {
  padding: 16rpx;
}

.h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0;
}

.healthyinfo {
  font-size: 28rpx;
  color:#17B824;
  font-weight: bold;
}

.criticalinfo {
  font-size: 28rpx;
  color: #E67E22;
  font-weight: bold;
}

.tools-card {
  margin-top: 4rpx;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-gap: 0rpx;
  margin-bottom: 30rpx;
}

.tool {
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(254, 255, 255);
}

.tool:hover {
  background-color: #f8f9fa;
}
.camera {
  border-bottom-left-radius: 25rpx;
}

.tool image {
  height: 81rpx;
  width: 81rpx;
  filter: saturate(0.7);
}

.tool image:hover {
  filter: saturate(100%);
}

.tool-status {
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(254, 255, 255);
  font-size: 40rpx;
  font-weight: medium;
  line-break: loose;
  border-bottom-right-radius: 25rpx;
}

.tutorial-card {
  height: 105rpx;
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
  background: rgb(254, 255, 255);
  padding: 8rpx 16rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  /* border: 1px solid rgb(235,235,235); */
}

.tutorial-card-how {
  height: 105rpx;
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
  background: rgb(254, 255, 255);
  padding: 8rpx 16rpx;
  /* border: 1px solid rgb(235,235,235); */
}

.tutorial-card-exit {
  height: 105rpx;
  display: flex;
  align-items: center;
  background: rgb(254, 255, 255);
  padding: 8rpx 16rpx;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  /* border: 1px solid rgb(235,235,235); */
}

.tutorial-image {
  height: 36rpx;
  width: 36rpx;
  filter: saturate(0.7);
  margin-left: 45rpx;
  margin-right: 45rpx;
}

.tuorial {
  flex-grow: 1;
  padding: 0 24rpx;
}

