.description {
  color: #212121;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 22rpx;
  margin-top: 50rpx;
}

.title {
  letter-spacing: 5rpx;
  margin-bottom: 30rpx;
  font-weight: bold; 
}

.body {
  text-indent: 50rpx;
  letter-spacing: 4prx;
  line-height: 1.8;
  font-weight: medium;
}

@media (prefers-color-scheme: dark) {
  body {
    background: rgba(44, 52, 64, 0.6);
  }

  .description {
    color: white;
    opacity: 0.7;
  }
}